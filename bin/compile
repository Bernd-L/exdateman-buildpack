# Log start of script
echo "-----> Writing files from config vars"

# Functions
indent() {
  sed -u 's/^/       /'
}

parsePath() {
  sed -u 's/_-/'
}

# Assign variables
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

# Iterate over config var-files

  # Parse the desired path

  # Check if file exists
  if [ ! -e "$Path_with_name"]; then
  
    # If not, create a new one
    touch "$Path_with_name"
  
  # End if
  fi

  # Write file contents
  echo "$Current_file" > "$Path_with_name"

